    <script>
        const questions = [
            {
                question: "1. O que √© programa√ß√£o?",
                options: ["Escrever hist√≥rias", "Dar instru√ß√µes para o computador", "Fazer desenhos no computador", "Digitar textos rapidamente"],
                answer: 1
            },
            {
                question: "2. Como chamamos o comando que faz o computador repetir uma a√ß√£o?",
                options: ["Repeti√ß√£o", "Pular", "Loop", "Voltar"],
                answer: 2
            },
            {
                question: "3. Qual comando usamos para dizer que o computador s√≥ deve fazer algo (se) uma condi√ß√£o for verdadeira?",
                options: ["Sim/n√£o", "Condi√ß√£o", "Talvez", "If"],
                answer: 3
            },
            {
                question: "4. O que √© uma vari√°vel na programa√ß√£o?",
                options: ["Uma caixinha para guardar informa√ß√µes", "Um comando que repete a√ß√µes", "Uma fun√ß√£o matem√°tica", "Um tipo de erro no programa"],
                answer: 0
            },
            {
                question: "5. Qual √© o nome dado √†s a√ß√µes que fazemos no teclado ou no mouse para controlar o computador?",
                options: ["Sa√≠da", "Programa", "Entrada", "Processador"],
                answer: 2
            },
            {
                question: "6. Como chamamos os erros em um programa de computador?",
                options: ["Bugs", "Problemas", "Vari√°veis", "Comandos"],
                answer: 0
            },
            {
                question: "7. O que √© um algoritmo?",
                options: ["Um tipo de m√∫sica", "Uma sequ√™ncia de instru√ß√µes", "Um personagem de jogo", "Um comando para repetir a√ß√µes"],
                answer: 1
            },
            {
                question: "8. Como chamamos um bloco de c√≥digo que faz algo espec√≠fico em um programa?",
                options: ["Vari√°vel", "Condi√ß√£o", "Loop", "Fun√ß√£o"],
                answer: 3
            }
        ];

        const quizContainer = document.getElementById('quiz');
        const submitButton = document.getElementById('submit');
        const resultContainer = document.getElementById('result');

        function loadQuiz() {
            questions.forEach((q, index) => {
                const questionElement = document.createElement('div');
                questionElement.className = 'question';
                questionElement.innerHTML = `
                    <p>${q.question}</p>
                    <ul class="options">
                        ${q.options.map((option, i) => `
                            <li>
                                <input type="radio" id="q${index}o${i}" name="question${index}" value="${i}">
                                <label for="q${index}o${i}">${option}</label>
                                <div class="feedback" id="feedback${index}${i}"></div>
                            </li>`).join('')}
                    </ul>
                `;
                quizContainer.appendChild(questionElement);
            });
        }

        function showResult() {
            const answers = questions.map((_, index) => {
                const selected = document.querySelector(input[name="question${index}"]:checked);
                return selected ? parseInt(selected.value) : -1;
            });

            let score = 0;
            answers.forEach((answer, index) => {
                questions[index].options.forEach((_, optionIndex) => {
                    const feedbackElement = document.getElementById(feedback${index}${optionIndex});
                    if (optionIndex === questions[index].answer) {
                        if (answer === optionIndex) {
                            feedbackElement.innerHTML = "üéâ Correto!";
                            feedbackElement.className = "feedback correct";
                            score++;
                        } else {
                            feedbackElement.innerHTML = "‚ùå Errado!";
                            feedbackElement.className = "feedback incorrect";
                        }
                    }
                    feedbackElement.style.display = 'block';
                });
            });

            resultContainer.innerHTML = Voc√™ acertou <strong>${score}</strong> de <strong>${questions.length}</strong> perguntas!;
            resultContainer.style.display = 'block';
        }

        submitButton.addEventListener('click', showResult);

        loadQuiz();
    </script>

